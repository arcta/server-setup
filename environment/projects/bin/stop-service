#!/bin/bash

########################################################################
### stop all projects service
########################################################################
source ~/.local.cnf

LIST=$(ls ~/projects)
for project in ${LIST[*]}
do
    if [ -d "${HOME}/projects/${project}" ]; then
        if [ -d "${HOME}/projects/${project}/node-app" ]; then
            . ~/projects/bin/stop-app $project
        fi

        if [ -d "${HOME}/projects/${project}/python-api" ]; then
            . ~/projects/bin/stop-api $project
        fi
    fi
done
echo "Done"
